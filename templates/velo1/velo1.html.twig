{% extends 'main/base-front.html.twig' %}

{% block body %}
  <h1>Nos v√©los</h1>

  <div class="row">
    {% for velo in v %}
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          {% if velo.image %}
            <img src="{{ asset('tsawir/velo/' ~ velo.image) }}" alt="{{ velo.titre }}" style="max-width: 100%; ">
          {% else %}
            No image
          {% endif %}
          <div class="card-body">
            <p class="card-title">{{ velo.titre }}</p>
           
            <p class="card-text">{{ velo.prix }}</p>

            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  {% for label, messages in app.flashes() %}
    <div class="alert alert-{{ label }}">
      {% for message in messages %}
        {{ message }}
      {% endfor %}
    </div>
  {% endfor %}

{% endblock %}

