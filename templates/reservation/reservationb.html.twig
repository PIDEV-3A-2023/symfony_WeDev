    <script>
       (function() {
  // Get the filter input and table rows
  const filterInput = document.querySelector('#filter-name');
  const tableRows = document.querySelectorAll('#customers-table tbody tr');
  const tbody = document.querySelector('#customers-table tbody');

  // Filter rows based on user input
  filterInput.addEventListener('keyup', () => {
    const filterValue = filterInput.value.toLowerCase();
    tableRows.forEach(row => {
      const name = row.getAttribute('data-name').toLowerCase();
      if (name.indexOf(filterValue) > -1) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });

  // Filter rows based on category checkboxes
  function applyFilter() {
    const checkboxes = document.getElementsByName('category-filter[]');
    const checkedValues = Array.from(checkboxes).filter(checkbox => checkbox.checked).map(checkbox => checkbox.value);
    const rows = tbody.getElementsByTagName('tr');
    for (let i = 0; i < rows.length; i++) {
      const categoryName = rows[i].getElementsByTagName('td')[11].textContent.trim();
      if (checkedValues.includes(categoryName)) {
        rows[i].style.display = '';
      } else {
        rows[i].style.display = 'none';
      }
    }
  }

  // Add event listeners to category checkboxes
  const checkboxes = document.getElementsByName('category-filter[]');
  checkboxes.forEach(checkbox => {
    checkbox.addEventListener('change', () => {
      applyFilter();
    });
  });
})();

    </script>


